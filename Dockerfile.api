FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY models.py .
COPY database.py .
COPY observability.py .
COPY api.py .

# Expose ports
EXPOSE 8000
EXPOSE 9091

# Run the API
CMD ["python", "api.py"]
