FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY models.py .
COPY tools.py .
COPY app.py .
COPY .chainlit .chainlit

# Expose port
EXPOSE 8001

# Run Chainlit
CMD ["chainlit", "run", "app.py", "--host", "0.0.0.0", "--port", "8001"]
